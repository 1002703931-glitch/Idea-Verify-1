# 数据库配置
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/idea_verify
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/idea_verify

# Redis配置
REDIS_URL=redis://localhost:6379/0

# API密钥配置
# Reddit API (从 https://www.reddit.com/prefs/apps 获取)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=IdeaVerify/1.0 by /u/your_username

# GitHub API (从 https://github.com/settings/tokens 获取)
GITHUB_TOKEN=your_github_token

# Twitter API (从 https://developer.twitter.com/ 获取，需要付费)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# JWT配置
SECRET_KEY=your_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 应用配置
APP_NAME=Idea Verify API
APP_VERSION=1.0.0
DEBUG=True

# CORS配置
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# 数据收集配置
COLLECTION_INTERVAL_MINUTES=60
MAX_RESULTS_PER_REQUEST=50

# 环境配置
ENVIRONMENT=development  # development, production
